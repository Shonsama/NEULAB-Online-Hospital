<!--pages/register/register.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">挂号费：{{fee}}</view>
    <image src="https://image.weilanwl.com/gif/wave.gif" mode="scaleToFill" class="gif-wave"></image>
</cu-custom>
<form>
  <view class="cu-form-group margin-top">
		<view class="title">病历号</view>
		<input></input>
	</view>
	<view class="cu-form-group">
		<view class="title">姓名</view>
		<input></input>
	</view>
	<view class="cu-form-group">
		<view class="title">性别</view>
		<input></input>
	</view>
  <view class="cu-form-group">
		<view class="title">家庭地址</view>
		<input></input>
	</view>
	<view class="cu-form-group">
		<view class="title">出生日期</view>
		<input></input>
	</view>
	<view class="cu-form-group">
		<view class="title">年龄</view>
		<input></input>
	</view>
  <view class="cu-form-group">
		<view class="title">身份证号</view>
		<input></input>
	</view>
  <view class="cu-form-group margin-top">
		<view class="title">门诊科室</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker_departments}}">
			<view class="picker">
				{{index?picker_departments[index]:'选择门诊科室'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">挂号级别</view>
		<picker bindchange="PickerChange1" value="{{index1}}" range="{{picker_registerLevel}}">
			<view class="picker">
				{{index1?picker_registerLevel[index1]:'选择挂号级别'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">门诊医生</view>
		<picker bindchange="PickerChange2" value="{{index2}}" range="{{picker_doctors}}">
			<view class="picker">
				{{index2?picker_doctors[index2]:'选择门诊医生'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">结算类别</view>
		<picker bindchange="PickerChange3" value="{{index3}}" range="{{picker_constants}}">
			<view class="picker">
				{{index3?picker_constants[index3]:'选择门诊医生'}}
			</view>
		</picker>
	</view>
</form>
<view class="padding flex flex-direction">
  <button class="cu-btn bg-blue lg">挂号</button>
</view>